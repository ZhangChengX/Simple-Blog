@{
    @using WebApplication1.Models
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
    @addTagHelper *, WebApplication1
    @model List<Page>
    ViewData["Title"] = "Page List";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/styles/normalize.css">
</head>
<body>
    Page List
    <br>
    @foreach (var page in Model)
    {
        <ul>
            <li>ID: <a href="/page/@Html.DisplayFor(modelItem => page.Id)"> @Html.DisplayFor(modelItem => page.Id) </a></li>
            <li>URL: <a href="/page/@Html.DisplayFor(modelItem => page.Url)"> @Html.DisplayFor(modelItem => page.Url) </a></li>
            <li>Title: @Html.DisplayFor(modelItem => page.Title)</li>
            <li>Content: @Html.DisplayFor(modelItem => page.Content)</li>
            <li>UserId: @Html.DisplayFor(modelItem => page.UserId)</li>
            <li>Date Published: <timestamp-to-date-time>@Html.DisplayFor(modelItem => page.DatePublished)</timestamp-to-date-time></li>
            <li>Date Modified: <timestamp-to-date-time>@Html.DisplayFor(modelItem => page.DateModified)</timestamp-to-date-time></li>
        </ul>
    }
    <a href="/"> < Home Page </a>
    <!-- <script src="scripts/index.js"></script> -->
</body>
</html>